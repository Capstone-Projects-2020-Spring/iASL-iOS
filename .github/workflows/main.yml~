on: [pull_request]
name: "Integration Testing"

jobs:
  test:
    name: Integration Test
    runs-on: macos-latest
    strategy:
        matrix:
          destination: ['platform=iOS Simulator,OS=latest,name=iPad Air (3rd generation)']
    steps:
      - name: Checkout
        uses: actions/checkout@master
      - name: Build and test
        run: |
          cd Product\ Visualizer/
          xcodebuild clean test -workspace Product\ Visualizer.xcworkspace/ -scheme Product\ Visualizer -destination "${destination}" CODE_SIGN_IDENTITY="" CODE_SIGNING_REQUIRED=NO ONLY_ACTIVE_ARCH=NO
        env: 
         destination: ${{ matrix.destination }}